{
    "name": "audio-processing-backend",
    "version": "1.0.0",
    "description": "Backend asíncrono para procesamiento de audio de larga duración",
    "main": "dist/index.js",
    "scripts": {
        "build": "npm install && npx prisma generate && tsc",
        "start": "npx prisma generate && npx prisma migrate deploy && node dist/index.js",
        "start:dev": "npx prisma db push --accept-data-loss && node dist/index.js",
        "start:worker": "node dist/workers/audioWorker.js",
        "dev": "ts-node-dev src/index.ts",
        "worker": "ts-node-dev src/workers/audioWorker.ts",
        "migrate": "npx prisma migrate dev",
        "migrate:deploy": "npx prisma migrate deploy",
        "db:push": "npx prisma db push --accept-data-loss"
    },
    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "@prisma/client": "^6.0.1",
        "@supabase/supabase-js": "^2.39.0",
        "@types/multer": "^2.0.0",
        "@types/uuid": "^10.0.0",
        "@types/ws": "^8.18.1",
        "axios": "^1.13.2",
        "bcryptjs": "^2.4.3",
        "bullmq": "^5.1.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "ffmpeg-static": "^5.3.0",
        "fluent-ffmpeg": "^2.1.3",
        "form-data": "^4.0.5",
        "ioredis": "^5.3.2",
        "multer": "^2.0.2",
        "uuid": "^13.0.0",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/fluent-ffmpeg": "^2.1.28",
        "@types/node": "^20.10.0",
        "prisma": "^6.0.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.2"
    }
}
